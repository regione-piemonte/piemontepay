<beans 
	xmlns="http://www.springframework.org/schema/beans" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
	http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee.xsd"
>

	<!-- EJB -->
	<jee:local-slsb id="parametro" jndi-name="java:global/epayservicesbe/epayservices-ejb/ParametroFacade"
	    business-interface="it.csi.epay.epayservices.interfaces.ejb.ParametroFacade"/>
	    
	<jee:local-slsb id="componentiimporto" jndi-name="java:global/epayservicesbe/epayservices-ejb/ComponentiImportoFacade"
	    business-interface="it.csi.epay.epayservices.interfaces.ejb.ComponentiImportoFacade"/>
	
	<jee:local-slsb id="ente" jndi-name="java:global/epayservicesbe/epayservices-ejb/EnteFacade"
	    business-interface="it.csi.epay.epayservices.interfaces.ejb.EnteFacade"/>
	
	<jee:local-slsb id="configurazione" jndi-name="java:global/epayservicesbe/epayservices-ejb/ConfigurazioneFacade"
	    business-interface="it.csi.epay.epayservices.interfaces.ejb.ConfigurazioneFacade"/>
    
    <jee:local-slsb id="pagamento" jndi-name="java:global/epayservicesbe/epayservices-ejb/PagamentoFacade"
        business-interface="it.csi.epay.epayservices.interfaces.ejb.PagamentoFacade"/>
    
    <jee:local-slsb id="datiAvvisoPagamento" jndi-name="java:global/epayservicesbe/epayservices-ejb/DatiAvvisoPagamentoFacade"
        business-interface="it.csi.epay.epayservices.interfaces.ejb.DatiAvvisoPagamentoFacade"/>
</beans>
